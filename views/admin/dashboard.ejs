<%- include('../partials/adminHeader.ejs'); -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Frojosh Pos system</title>
    <style>
        /* =========================
   ROOT COLORS
========================= */
:root {
  --navy: #0b1f3a;
  --navy-light: #12335f;
  --white: #ffffff;
  --light-gray: #f2f4f7;
  --text-dark: #1f2933;
  --border-light: #e5e7eb;
}

/* =========================
   GLOBAL
========================= */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Segoe UI", Arial, sans-serif;
  background: var(--light-gray);
  color: var(--text-dark);
}

/* =========================
   MAIN CONTENT
========================= */
.main-content {
  padding: 1rem;
}

/* =========================
   DASHBOARD HEADER
========================= */
.dashboard-header {
  margin-bottom: 1.5rem;
}

.dashboard-header h1 {
  font-size: 1.4rem;
  color: var(--navy);
}

.dashboard-header p {
  font-size: 0.95rem;
  color: #555;
  margin-top: 0.3rem;
}

/* =========================
   CARDS
========================= */
.cards-container {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1rem;
  margin-bottom: 2rem;
}

.card {
  background: var(--white);
  padding: 1.2rem;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.05);
}

.card span {
  font-size: 1.8rem;
}

.card h3 {
  margin-top: 0.5rem;
  font-size: 0.95rem;
  color: #555;
}

.card p {
  margin-top: 0.4rem;
  font-size: 1.2rem;
  font-weight: bold;
  color: var(--navy);
}

/* =========================
   CHARTS
========================= */
.charts-container {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.chart-box {
  background: var(--white);
  padding: 1rem;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.05);
}

.chart-box h3 {
  margin-bottom: 1rem;
  font-size: 1rem;
  color: var(--navy);
}

/* =========================
   TABLE
========================= */
.recent-activity {
  background: var(--white);
  padding: 1rem;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.05);
}

.recent-activity h3 {
  margin-bottom: 1rem;
  color: var(--navy);
}

table {
  width: 100%;
  border-collapse: collapse;
}

thead {
  background: var(--navy);
  color: var(--white);
}

th, td {
  padding: 0.6rem;
  text-align: left;
  font-size: 0.85rem;
}

tbody tr {
  border-bottom: 1px solid var(--border-light);
}

tbody tr:last-child {
  border-bottom: none;
}

/* =========================
   TABLET VIEW (‚â• 768px)
========================= */
@media (min-width: 768px) {
  .cards-container {
    grid-template-columns: repeat(2, 1fr);
  }

  .charts-container {
    grid-template-columns: 1fr 1fr;
  }

  th, td {
    font-size: 0.9rem;
  }
}

/* =========================
   DESKTOP VIEW (‚â• 1024px)
========================= */
@media (min-width: 1024px) {

  /* Assuming sidebar width is 240px */
  .main-content {
    margin-left: 20px;
    padding: 2rem;
  }

  .cards-container {
    grid-template-columns: repeat(5, 1fr);
  }

  .dashboard-header h1 {
    font-size: 1.8rem;
  }
}

    </style>
</head>
<body>
  <!-- MAIN DASHBOARD CONTENT -->
  <main class="main-content">

    <!-- DASHBOARD HEADER / GREETING -->
    <div class="dashboard-header">
      <h1>Welcome, <%= user.username %>!</h1>
      <p>Here‚Äôs what‚Äôs happening in your store today.</p>
    </div>

    <!-- QUICK STATS CARDS -->
    <div class="cards-container">
      <div class="card">
        <span>üí∞</span>
        <h3>Total Sales Today</h3>
        <p><%= stats.totalSalesToday %> Ksh</p>
      </div>
      <div class="card">
        <span>üì¶</span>
        <h3>Total Products</h3>
        <p><%= stats.totalProducts %></p>
      </div>
      <div class="card">
        <span>‚ö†Ô∏è</span>
        <h3>Low Stock Alerts</h3>
        <p><%= stats.lowStock %></p>
      </div>
      <div class="card">
        <span>üë§</span>
        <h3>Total Cashiers</h3>
        <p><%= stats.totalCashiers %></p>
      </div>
      <div class="card">
        <span>üìä</span>
        <h3>Revenue This Month</h3>
        <p><%= stats.revenueMonth %> Ksh</p>
      </div>
    </div>

    <!-- CHARTS -->
    <div class="charts-container">
      <div class="chart-box">
        <h3>Sales Trend</h3>
        <canvas id="salesTrend"></canvas>
      </div>
      <div class="chart-box">
        <h3>Top-Selling Products</h3>
        <canvas id="topProducts"></canvas>
      </div>
    </div>

    <!-- RECENT TRANSACTIONS / ALERTS -->
    <div class="recent-activity">
      <h3>Recent Transactions</h3>
      <table>
        <thead>
          <tr>
            <th>Invoice</th>
            <th>Customer</th>
            <th>Total</th>
            <th>Cashier</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
  <% recentTransactions.forEach(function(tx){ %>
    <tr>
      <td><%= tx.invoice || '-' %></td>
      <td><%= tx.customer?.name || 'Walk-in' %></td>
      <td><%= tx.totalAmount || 0 %> Ksh</td>
      <td><%= tx.cashier?.username || '-' %></td>
      <td><%= tx.status %></td>
    </tr>
  <% }) %>
</tbody>

      </table>
    </div>

  </main>

</div>

<!-- CHART.JS SCRIPTS -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const salesLabels = <%- JSON.stringify(stats.salesTrend.labels || []) %>;
  const salesData = <%- JSON.stringify(stats.salesTrend.data || []) %>;
  const topProductLabels = <%- JSON.stringify(stats.topProducts.labels || []) %>;
  const topProductData = <%- JSON.stringify(stats.topProducts.data || []) %>;
</script>


<script>
  // SALES TREND LINE CHART
  const salesCtx = document.getElementById('salesTrend').getContext('2d');
  new Chart(salesCtx, {
    type: 'line',
    data: {
      labels: salesLabels,
      datasets: [{
        label: 'Sales',
        data: salesData,
        borderColor: '#001f4d',
        backgroundColor: 'rgba(0,31,77,0.2)',
        tension: 0.3,
        fill: true
      }]
    },
    options: { responsive: true }
  });

  // TOP-SELLING PRODUCTS BAR CHART
  const productsCtx = document.getElementById('topProducts').getContext('2d');
  new Chart(productsCtx, {
    type: 'bar',
    data: {
      labels: topProductLabels,
      datasets: [{
        label: 'Units Sold',
        data: topProductData,
        backgroundColor: '#001f4d'
      }]
    },
    options: { responsive: true }
  });
</script>
</body>
</html>