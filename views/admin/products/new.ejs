<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add New Product</title>
  <style>
    /* =========================
       ROOT COLORS
    ========================= */
    :root {
      --navy: #0a1f44;
      --white: #ffffff;
      --light-gray: #f2f4f7;
      --border-gray: #dcdfe3;
      --error-red: #b30000;
      --error-bg: #ffe5e5;
    }

    /* =========================
       GLOBAL RESET
    ========================= */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, Helvetica, sans-serif;
      background: var(--light-gray);
      color: #333;
    }

    /* =========================
       PAGE WRAPPER
    ========================= */
    .product-create-page {
      padding: 1rem;
    }

    /* =========================
       HEADER
    ========================= */
    .product-create-page header {
      background: var(--navy);
      color: var(--white);
      padding: 1.2rem;
      border-radius: 8px;
      margin-bottom: 1rem;
    }

    .product-create-page header h1 {
      font-size: 1.4rem;
      margin-bottom: 0.3rem;
    }

    .product-create-page header p {
      font-size: 0.9rem;
      opacity: 0.9;
    }

    .product-create-page header a {
      display: inline-block;
      margin-top: 0.6rem;
      color: var(--white);
      text-decoration: none;
      font-size: 0.85rem;
    }

    /* =========================
       ERROR MESSAGE
    ========================= */
    .product-create-page > p {
      background: var(--error-bg);
      color: var(--error-red);
      padding: 0.7rem;
      border-radius: 5px;
      margin-bottom: 1rem;
      font-size: 0.9rem;
    }

    /* =========================
       FORM
    ========================= */
    .product-create-page form {
      background: var(--white);
      padding: 1rem;
      border-radius: 8px;
    }

    fieldset {
      border: 1px solid var(--border-gray);
      padding: 1rem;
      margin-bottom: 1rem;
      border-radius: 6px;
    }

    legend {
      padding: 0 0.5rem;
      font-weight: bold;
      color: var(--navy);
    }

    label {
      display: flex;
      flex-direction: column;
      font-size: 0.9rem;
      margin-bottom: 0.8rem;
    }

    input,
    select,
    textarea {
      margin-top: 0.3rem;
      padding: 0.6rem;
      border-radius: 5px;
      border: 1px solid var(--border-gray);
      font-size: 0.9rem;
    }

    input:focus,
    select:focus,
    textarea:focus {
      outline: none;
      border-color: var(--navy);
    }

    input[type="file"] {
      padding: 0.4rem;
      background: var(--light-gray);
    }

    small {
      font-size: 0.75rem;
      color: #666;
    }

    .form-actions {
      display: flex;
      flex-direction: column;
      gap: 0.6rem;
      margin-top: 1rem;
    }

    .form-actions button {
      background: var(--navy);
      color: var(--white);
      border: none;
      padding: 0.7rem;
      border-radius: 6px;
      font-size: 0.95rem;
      cursor: pointer;
    }

    .form-actions button:hover {
      opacity: 0.9;
    }

    .form-actions a {
      text-align: center;
      text-decoration: none;
      color: var(--navy);
      font-size: 0.9rem;
    }

    /* =========================
       TABLET VIEW
    ========================= */
    @media (min-width: 768px) {
      .product-create-page {
        padding: 2rem;
      }

      .product-create-page form {
        padding: 2rem;
      }

      fieldset {
        padding: 1.5rem;
      }

      .form-actions {
        flex-direction: row;
        justify-content: flex-end;
      }

      .form-actions button,
      .form-actions a {
        width: auto;
        padding: 0.7rem 1.5rem;
      }
    }

    /* =========================
       DESKTOP VIEW
    ========================= */
    @media (min-width: 1024px) {
      .product-create-page {
        margin-left: 240px; /* if you have a fixed sidebar */
        max-width: 900px;
      }

      fieldset {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }

      fieldset legend {
        grid-column: span 2;
      }

      textarea {
        grid-column: span 2;
      }
    }
  </style>
</head>
<body>

  <div class="product-create-page">

    <!-- HEADER -->
    <header>
      <h1>Add New Product</h1>
      <p>Fill in the details below to add a product to inventory</p>
      <a href="/admin/inventory">â¬… Back to Inventory</a>
    </header>

    <!-- ERROR MESSAGE -->
    <% if (error) { %>
      <p><%= error %></p>
    <% } %>

    <!-- PRODUCT FORM -->
    <!-- âœ… Added enctype for image upload -->
    <form action="/admin/products" method="POST" enctype="multipart/form-data">

      <!-- BASIC DETAILS -->
      <fieldset>
        <legend>Basic Information</legend>

        <label>
          Product Name
          <input type="text" name="name" required>
        </label>

        <label>
          SKU / Code
          <input type="text" name="sku" required>
        </label>

        <label>
          Category
          <select name="category">
            <option value="">Select Category</option>
            <% categories.forEach(cat => { %>
              <option value="<%= cat._id %>"><%= cat.name %></option>
            <% }) %>
          </select>
        </label>
      </fieldset>

      <!-- PRICING -->
      <fieldset>
        <legend>Pricing</legend>

        <label>
          Buying Price (Ksh)
          <input type="number" name="buyingPrice" min="0" step="0.01" required>
        </label>

        <label>
          Selling Price (Ksh)
          <input type="number" name="sellingPrice" min="0" step="0.01" required>
        </label>
      </fieldset>

      <!-- STOCK -->
      <fieldset>
        <legend>Stock Information</legend>

        <label>
          Initial Quantity
          <input type="number" name="quantity" min="0" required>
        </label>

        <label>
          Minimum Stock Level
          <input type="number" name="minStock" min="0" required>
        </label>
      </fieldset>

      <!-- IMAGE UPLOAD -->
      <fieldset>
        <legend>Product Image</legend>

        <label>
          Upload Product Image (optional)
          <input type="file" name="image" accept="image/*">
        </label>

        <small>Optional. JPG, PNG recommended.</small>
      </fieldset>

      <!-- DESCRIPTION -->
      <fieldset>
        <legend>Additional Info</legend>

        <label>
          Description (optional)
          <textarea name="description" rows="4"></textarea>
        </label>
      </fieldset>

      <!-- ACTIONS -->
      <div class="form-actions">
        <button type="submit">ðŸ’¾ Save Product</button>
        <a href="/admin/inventory">Cancel</a>
      </div>

    </form>

  </div>

</body>
</html>
